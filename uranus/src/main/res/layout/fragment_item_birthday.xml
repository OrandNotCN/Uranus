<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/square_card_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sobot_avatar_customerservice"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:text="name"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/iv_icon_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:src="@drawable/solar_icon"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_icon_date"
        android:layout_alignBottom="@id/iv_icon_date"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:text="9月6日"
        android:textAppearance="?attr/textAppearanceListItem" />
    <TextView
        android:id="@+id/tv_cd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:text="今天"
        android:textColor="@color/red_btn_bg_color"
        android:textSize="22sp"/>
</RelativeLayout>

